{
  "transform": {
    ".(ts|tsx)": "ts-jest"
  },
  "testEnvironment": "jsdom",
  "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
  "moduleFileExtensions": ["ts", "tsx", "js", "json"],
  "collectCoverage": true,
  "coverageDirectory": "./coverage",
  "collectCoverageFrom": ["src/**/*.(ts|js)", "!src/tests/*", "!src/types/**/*", "index.ts"]
}
